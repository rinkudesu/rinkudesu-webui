@using Rinkudesu.Gateways.Webui.Utils
@model PasswordChangeViewModel

@*TODO: add localisation*@
<h3>Change password</h3>
<form asp-action="ChangePassword" asp-antiforgery="true">
    <input type="hidden" name="returnUrl" value="@Context.GetCurrentUrl()"/>
    <div class="row mt-2">
        <div class="col">
            @Html.DisplayNameFor(m => m.OldPassword)
        </div>
    </div>
    <div class="row">
        <div class="col">
            <input class="form-control" asp-for="OldPassword"/>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col">
            @Html.DisplayNameFor(m => m.NewPassword)
        </div>
    </div>
    <div class="row">
        <div class="col">
            <input class="form-control" asp-for="NewPassword"/>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col">
            @Html.DisplayNameFor(m => m.NewPasswordRepeat)
        </div>
    </div>
    <div class="row">
        <div class="col">
            <input class="form-control" asp-for="NewPasswordRepeat"/>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col">
            <input class="btn btn-primary" type="submit" value="Change password"/>
        </div>
    </div>
</form>
