@using Rinkudesu.Gateways.Webui.Utils
@using Rinkudesu.Gateways.Utils
@inject IViewLocalizer Localizer
<ul class="navbar-nav">
    @if (User.Identity!.IsAuthenticated)
    {
        <a class="btn btn-primary" asp-area="" asp-action="Index" asp-controller="AccountManagement">@Localizer["hello"] @User.Identity.Name</a>
        <form asp-controller="UserSession" asp-action="Logout" asp-antiforgery="true">
            <input type="submit" value="@Localizer["logout"]" class="btn btn-secondary"/>
        </form>
    }
    else
    {
        <a id="login_btn" class="btn btn-primary" asp-controller="UserSession" asp-action="Login" asp-route-returnUrl="@Context.GetCurrentUrl()">@Localizer["login"]</a>
        @if (EnvironmentalVariableReader.RegistrationEnabled)
        {
            <a id="register_btn" class="btn btn-secondary" asp-controller="AccountCreation" asp-action="Index">@Localizer["register"]</a>
        }
    }
</ul>
