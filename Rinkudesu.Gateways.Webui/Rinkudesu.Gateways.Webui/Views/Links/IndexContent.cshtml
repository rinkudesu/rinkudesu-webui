@inject IViewLocalizer Localizer
@using System.Text.Json
@using System.Text.Json.Serialization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model System.Collections.Generic.List<Rinkudesu.Gateways.Webui.Models.LinkIndexViewModel>

@{
    var query = (LinkIndexQueryModel)ViewBag.Query;
    var queryJson = JsonSerializer.Serialize(query, new JsonSerializerOptions { DefaultIgnoreCondition = JsonIgnoreCondition.WhenWritingNull });
}

<span hidden id="query" data-value="@queryJson"></span>
@foreach (var link in Model)
{
    <div class="row mb-2">
        <div class="col">
            @link.LinkUrl
        </div>
        <div class="col multiline-tags-container">
            @foreach (var tag in link.LinkTags)
            {
                <span class="tag-display"><span class="user-data-display">@tag.Name</span></span>
            }
        </div>
        <div class="col-1">
            @*TODO: These translations will need a new home as the file name has changed*@
            <a class="btn btn-info" asp-action="Edit" asp-route-id="@link.Id.ToString()" asp-route-returnUrl="@ViewBag.ReturnUrlBase">@Localizer["edit"]</a>
        </div>
        <div class="col-1">
            @await Html.PartialAsync("_DeletePartial", link)
        </div>
    </div>
}
