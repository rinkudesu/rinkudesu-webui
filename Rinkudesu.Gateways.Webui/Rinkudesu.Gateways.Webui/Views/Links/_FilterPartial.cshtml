@using Rinkudesu.Gateways.Clients.Tags
@using Rinkudesu.Gateways.Webui.Utils
@model LinkIndexQueryModel
@inject TagsClient TagsClient

@{
    //todo: this is temporary and needs better, dynamic lookup with autocompletion, but since that doesn't exist yet, I'll just put this thing here
    //todo: for that same reason this view is for now limited to only a single tag filtering (as bootstrap doesn't play well with multiselects for some reason)
    TagsClient.SetAccessToken(Context.GetJwt());
    var tags = await TagsClient.GetTags();
    var selectList = new SelectList(tags, nameof(TagDto.Id), nameof(TagDto.Name), Model.TagIds);
}

<form method="get" asp-action="Index" asp-antiforgery="false" class="mt-3 mb-3">
    <div class="row">
        <div class="col-2">
            <label asp-for="TagIds"></label>
        </div>
        <div class="col-10">
            <select class="form-select" asp-items="selectList" asp-for="TagIds">
                <option value=""></option>
            </select>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-11"><!--padding--></div>
        <div class="col-1 d-flex flex-column">
            <input type="submit" class="btn btn-primary" value="Filter"/>
        </div>
    </div>
</form>
