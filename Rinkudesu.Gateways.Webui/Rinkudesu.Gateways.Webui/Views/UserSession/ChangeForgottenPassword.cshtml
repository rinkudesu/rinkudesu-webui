@model ChangeForgottenPasswordViewModel
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = Localizer["title"];
    Layout = "_Layout";
}

<h2>@Localizer["title"]</h2>

<form asp-action="ChangeForgottenPassword" asp-antiforgery="true">
    <input type="hidden" asp-for="Token"/>
    <input type="hidden" asp-for="UserId"/>
    <div class="row mb-3">
        <div class="col-12 mb-0">
            <label asp-for="Password"></label>
        </div>
        <div class="col-12">
            <input asp-for="Password" class="form-control"/>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-12 mb-0">
            <label asp-for="PasswordRepeat"></label>
        </div>
        <div class="col-12">
            <input asp-for="PasswordRepeat" class="form-control"/>
        </div>
    </div>
    <div class="row">
        <div class="col-2 offset-10 d-flex">
            <input type="submit" class="btn btn-primary flex-fill" value="@Localizer["save"]"/>
        </div>
    </div>
</form>
